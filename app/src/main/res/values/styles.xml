<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="actionBarStyle">@style/Actionbar</item>
    </style>

    <style name="Actionbar" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="ButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Ring">
        <item name="android:layout_width">@dimen/ring_width</item>
        <item name="android:layout_gravity">center_vertical|top</item>
        <item name="android:layout_height">@dimen/ring_width</item>
    </style>

    <style name="RingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="DescribeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Bridge">
        <item name="android:layout_width">2.5dp</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@color/orange</item>
    </style>

</resources>
